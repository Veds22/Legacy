<%- include('partials/header') %>
  <style>
    body {
      background-color: #f3f3f3;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
      max-width: 900px;
      margin: 50px auto;
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-wrap: wrap;
    }

    .form-section {
      padding: 60px 40px;
      flex: 1;
      min-width: 300px;
    }

    .form-section h2 {
      font-weight: 700;
      margin-bottom: 10px;
    }

    .form-section p {
      color: #666;
      margin-bottom: 30px;
    }

    .form-check-label {
      font-size: 0.9rem;
    }

    .illustration-section {
      background: linear-gradient(to right, #e26a00, #e26a00);
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 300px;
    }

    .illustration-section img {
      max-width: 90%;
      height: auto;
    }

    .form-control {
      border-radius: 10px;
      padding: 10px 15px;
    }

    .btn-primary {
      background-color: #e26a00;
      border: none;
      border-radius: 10px;
      padding: 10px 25px;
      font-weight: 600;
    }

    .btn-primary:hover {
      background-color: #e26a00;
    }

    .signup-link {
      font-size: 0.9rem;
      margin-top: 20px;
    }
  </style>
</head>
<body>
<div class="login-container">
  <div class="form-section">
    <h2>Holla, Welcome Back</h2>
    <p>Hey, welcome back to your special place</p>
    <form method="POST" action="/login">
      <div class="mb-3">
        <input type="email" class="form-control" name="username" placeholder="Email Address" />
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" name="password" placeholder="Password" />
      </div>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" checked />
          <label class="form-check-label">Remember me</label>
        </div>
        <a href="#" style="font-size: 0.9rem;">Forgot Password?</a>
      </div>
      <button type="submit" class="btn btn-primary w-100">Sign In</button>
    </form>
    <p class="signup-link text-center mt-3">
      Don't have an account? <a href="/register">Sign Up</a>
    </p>
  </div>
  

  <div class="illustration-section">
    <img src="/static/images/login.png" alt="Login Illustration" />
  </div>
</div>

</body>
</html>

<%- include('partials/footer') %>
