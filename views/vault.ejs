    z-index: 1;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    font-family: sans-serif;
  }
  .container-fluid::before{
    content: " ";
    position: absolute;
  top:50px ;
    left: 0;
    opacity: 0.6;
   background: url('https://thumbs.dreamstime.com/b/happy-asian-family-taking-selfie-three-generation-sitting-grass-using-mobile-phone-outdoors-park-166580534.jpg');
    background-size: cover ;
z-index: -1;
  
  background-position: center;
  background-repeat: no-repeat;
  height: 110vh;
  padding-top: 60px;
  width: 100%;
  }
    .content-wrapper {
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      padding: 2rem;
      max-width: 80%;
      margin: 0 auto;
    }

    .btn-add {
      background-color: #fb851e;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-add:hover {
      background-color: #e36e08;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(108, 77, 197, 0.2);
    }

    .btn-add i {
      font-size: 1.1rem;
      transition: transform 0.3s ease;
    }

    .btn-add:hover i {
      transform: rotate(90deg);
    }

    .display-card {
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: all 0.3s ease;
      background: #fff;
      height: 100%;
    }

    .display-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
    }

    .display-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .display-card:hover .display-image {
      transform: scale(1.05);
    }

    .display-body {
      padding: 1.25rem;
    }

    .display-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.4rem;
      color: #333;
    }

    .display-subtitle {
      font-size: 0.95rem;
      color: #666;
      margin-bottom: 0.75rem;
      line-height: 1.4;
    }

    .display-meta {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.25rem;
    }

    @media (max-width: 768px) {
      .content-wrapper {
        padding: 1.5rem;
      }

      .display-image {
        height: 180px;
      }

      .display-body {
        padding: 1rem;
      }

      .display-title {
        font-size: 1.1rem;
      }

      .display-subtitle {
        font-size: 0.9rem;
      }
    }
</style>

<%- include('partials/footer') %>

<script>
function deleteImage(vaultId, imageId) {
  fetch(`/vaults/${vaultId}/${imageId}`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    },
    credentials: 'same-origin' // âœ… send cookies!
  })  
  .then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      alert('Error deleting image');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error deleting image');
  });
}
</script>
