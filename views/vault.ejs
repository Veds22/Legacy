<%- include('partials/header') %>



<div class="container-fluid px-4">
  <div class="content-wrapper bg-white rounded-4 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 mb-0">Vault Titles</h1>
      <a href="/vaults/<%= vaultId %>/upload" class="btn btn-add">
        <i class="fas fa-upload"></i> Upload
      </a>
    </div>
    <div class="container py-4">
        <div class="row justify-content-center gy-3">
          <% cards.forEach(card => { %>
            <div class="col-md-6 col-lg-4">
              <div class="display-card">
                <img src="<%= card.imageUrl %>" alt="Image" class="display-image">
                <div class="display-body">
                  <div class="display-title bold"><%= card.title %></div>
                  <div class="display-subtitle"><%= card.subtitle %></div>
                  <div class="display-meta">Added by: <%= card.addedBy %></div>
                  <div class="display-meta">Added on: <%= card.addedOn %></div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
  </div>
</div>

<style>
    .content-wrapper {
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      padding: 2rem;
      max-width: 80%;
      margin: 0 auto;
    }

    .btn-add {
      background-color: #6c4dc5;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-add:hover {
      background-color: #563ecf;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(108, 77, 197, 0.2);
    }

    .btn-add i {
      font-size: 1.1rem;
      transition: transform 0.3s ease;
    }

    .btn-add:hover i {
      transform: rotate(90deg);
    }

    .display-card {
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: all 0.3s ease;
      background: #fff;
      height: 100%;
    }

    .display-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
    }

    .display-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .display-card:hover .display-image {
      transform: scale(1.05);
    }

    .display-body {
      padding: 1.25rem;
    }

    .display-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.4rem;
      color: #333;
    }

    .display-subtitle {
      font-size: 0.95rem;
      color: #666;
      margin-bottom: 0.75rem;
      line-height: 1.4;
    }

    .display-meta {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.25rem;
    }

    @media (max-width: 768px) {
      .content-wrapper {
        padding: 1.5rem;
      }

      .display-image {
        height: 180px;
      }

      .display-body {
        padding: 1rem;
      }

      .display-title {
        font-size: 1.1rem;
      }

      .display-subtitle {
        font-size: 0.9rem;
      }
    }
</style>

<%- include('partials/footer') %>