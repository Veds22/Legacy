<%- include('partials/header') %>

<header class="hero-section text-white d-flex align-items-center text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">Preserve Your Family's Legacy</h1>
    <p class="lead">A warm, secure place to hold and share timeless memories.</p>
    <a href="/vaults/create" class="btn btn-outline-light">
      <i class="bi bi-plus-circle me-2"></i>Create Vault
    </a>
    <a href="#about" class="btn btn-outline-light">
      <i class="bi bi-info-circle me-2"></i>Learn More
    </a>
  </div>
</header>


<section class="py-5 bg-light" id="about">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 mb-4 mb-md-0">
        <img src="/static/images/img.webp" class="img-fluid rounded" alt="Family Memory" />
      </div>
      <div class="col-md-6">
        <h2 class="text-orange">What is Legacy?</h2>
        <p class="fs-5">Legacy is a digital vault for families to store photos, videos, letters, and moments that matter. Invite family members, protect memories, and cherish history together.</p>
      </div>
    </div>
  </div>
</section>


<section class="py-5">
  <div class="container text-center">
    <h3 class="mb-4 text-orange">Explore Your Vaults</h3>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card-sm">
          <img src="/static/images/image.png" class="card-img-top" alt="Vault 1">
          <div class="card-body">
            <h5 class="card-title">Grandma's Vault</h5>
            <p class="card-text">124 Memories · 6 Members</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-sm">
          <img src="/static/images/reunion.png" class="card-img-top" alt="Vault 2">
          <div class="card-body">
            <h5 class="card-title">Reunion 2020</h5>
            <p class="card-text">75 Memories · 4 Members</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-sm">
          <img src="/static/images/resized_couple_image.png" class="card-img-top" alt="Vault 3">
          <div class="card-body">
            <h5 class="card-title">Our Love Story</h5>
            <p class="card-text">52 Memories · 2 Members</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<footer class="bg-white text-center py-3 border-top">
  <p class="mb-0 text-muted">© 2025 Legacy. All rights reserved.</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</section>
</body>
</html>
