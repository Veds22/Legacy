<%- include('partials/header') %>
  
<div class="login-container">
  <div class="form-section">
    <h2>Create an Account</h2>
    <p>Join us and preserve your family's legacy</p>
    <form action="/register" method="POST">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Full Name" name="username" />
          </div>
      <div class="mb-3">
        <input type="email" class="form-control" placeholder="Email Address" name="email" />
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" placeholder="Password" name="password"/>
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" placeholder="Confirm Password" />
      </div>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" checked />
          <label class="form-check-label">Remember me</label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary w-100">
        <i class="bi bi-person-plus me-2"></i>Sign Up
      </button>
    </form>
    <p class="signup-link text-center mt-3">
      Already have account? <a href="/login"><i class="bi bi-box-arrow-in-right me-1"></i>Sign In</a>
    </p>
  </div>
  

  <div class="illustration-section">
    <img src="/static/images/register.png" alt="Login Illustration" />
  </div>
</div>
<style>
  body {
    background-color: #f3f3f3;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .login-container {
    max-width: 900px;
    margin: 50px auto;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-wrap: wrap;
  }

  .form-section {
    padding: 60px 40px;
    flex: 1;
    min-width: 300px;
  }

  .form-section h2 {
    font-weight: 700;
    margin-bottom: 10px;
  }

  .form-section p {
    color: #666;
    margin-bottom: 30px;
  }

  .form-check-label {
    font-size: 0.9rem;
  }

  .illustration-section {
    background: linear-gradient(to up, #fe9326);
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 300px;
  }

  .illustration-section img {
    max-width: 100%;
    height: 100%;
  }

  .form-control {
    border-radius: 10px;
    padding: 10px 15px;
  }

  .btn-primary {
    background-color: #f48320;
    border: none;
    border-radius: 10px;
    padding: 10px 25px;
    font-weight: 600;
  }

  .btn-primary:hover {
    background-color: #e36e08;
  }

  .signup-link {
    font-size: 0.9rem;
    margin-top: 20px;
  }
</style>
</body>

  <%- include('partials/footer') %>
