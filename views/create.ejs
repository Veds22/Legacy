<%- include('partials/header') %>

  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-5">
        <div class="container" >
        <form class="bg-white border rounded-4 shadow-sm p-4" action="/vaults/create" method="POST">
          <h4 class="mb-4 text-center">Create Vault</h4>

          <!-- Name -->
          <div class="mb-3">
            <label for="name" class="form-label" >Vault Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter vault name" required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter description"></textarea>
          </div>


          <div class="d-grid">
            <button type="submit" class="btn btn-purple fw-bold">Create Vault</button>
          </div>
        </form>
    </div>
      </div>
    </div>
  </div>
  <style>
    .display-card {
      max-width: 420px;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: transform 0.2s ease;
      background: #fff;
      margin: 2rem auto;
    }

    .display-card:hover {
      transform: translateY(-6px);
    }

    .display-image {
      width: 100%;
      height: 240px;
      object-fit: cover;
    }

    .display-body {
      padding: 1rem 1.25rem;
    }

    .display-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.4rem;
    }

    .display-subtitle {
      font-size: 1rem;
      color: #666;
      margin-bottom: 0.5rem;
    }

    .display-meta {
      font-size: 0.9rem;
      color: #888;
    }
    .form-label {
    font-weight: 600;
    font-size: 1.05rem;
  }
    .btn-purple {
      background-color: #e36e08;
      color: white;
      border: none;
      transition: all 0.3s ease;
    }

    .btn-purple:hover {
      background-color: #b75907;
    }

    .btn-purple:active {
      background-color: #e36e08;
    }
  </style>


<%- include('partials/footer') %>
